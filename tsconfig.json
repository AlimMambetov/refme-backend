{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"typeRoots": [
			"./node_modules/@types",
			"./src/core/types",
		],
		"lib": [
			"ES2020"
		],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}